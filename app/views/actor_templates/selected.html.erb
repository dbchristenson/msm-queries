<h1>Actor #<%= @actor_id %> details</h1>
<a href="/actors">Go back</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>

  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @actor.image %>" alt="" style="width:250px;"></dd>

  <dt>Created at</dt>
  <dd><%= @actor.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @actor.updated_at %></dd>
</dl>
